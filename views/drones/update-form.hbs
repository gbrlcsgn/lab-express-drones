<h2>Update the drone</h2>

<form action="/drones/{{_id}}/edit" method="post">

  <label for="name">Name</label>
  <input type="text" name="name" id="name" value="{{name}}" />

  <label for="propellers">Propellers</label>
  <input type="text" name="propellers" id="propellers" value="{{propellers}}" />

  <label for="maxSpeed">Maximum Speed</label>
  <textarea name="maxSpeed" id="maxSpeed" cols="30" rows="10">
    {{maxSpeed}}
  </textarea>

  <button type="submit">Update</button>

</form>

<a href="/drones">Drones</a>