<h2>Create a new drone</h2>

<form action="/drones/create" method="post">

  <label for="name">Name</label>
  <input type="text" name="name" id="name" />

  <label for="propellers">Propellers</label>
  <input type="text" name="propellers" id="propellers" />

  <label for="maxSpeed">Maximum Speed</label>
  <textarea name="maxSpeed" id="maxSpeed" cols="30" rows="10"></textarea>

  <button type="submit">Create</button>

</form>

